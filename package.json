{
  "name": "api",
  "packageManager": "yarn@4.5.2",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "keygen": "tsx scripts/keygen.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "format:fix": "biome format src/ --fix",
    "mig:gen": "knex migrate:make -x ts",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "test": "vitest run",
    "prepare": "husky"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "app-root-path": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.5.0",
    "change-case": "^5.4.4",
    "commander": "^13.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "envalid": "^8.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "figlet": "^1.9.3",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "inquirer": "^12.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.7",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "mustache": "^4.2.0",
    "node-jose": "^2.2.0",
    "ora": "^8.1.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4",
    "@types/figlet": "^1",
    "@types/jsonwebtoken": "^9",
    "@types/jwk-to-pem": "^2",
    "@types/morgan": "^1",
    "@types/mustache": "^4",
    "@types/node-jose": "^1.1.13",
    "@types/pg": "^8.12.0",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/zxcvbn": "^4",
    "husky": "^9.1.7",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": ["biome check --apply --no-errors-on-unmatched"]
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
